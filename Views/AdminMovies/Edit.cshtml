@model MovieTicketBooking.Models.Movie

@{
    ViewData["Title"] = "Sửa phim";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-warning text-white text-center">
            <h4 class="mb-0"><i class="fas fa-edit"></i> CHỈNH SỬA THÔNG TIN PHIM</h4>
        </div>

        <div class="card-body">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                @* Ẩn ID phim *@
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Tên phim</label>
                    <input asp-for="Title" class="form-control" placeholder="Nhập tên phim" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Mô tả</label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Nhập mô tả phim"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="ReleaseDate" class="form-label">Ngày khởi chiếu</label>
                        <input asp-for="ReleaseDate" type="date" class="form-control" />
                        <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Price" class="form-label">Giá vé (VNĐ)</label>
                        <input asp-for="Price" type="number" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Ảnh poster hiện tại:</label>
                    @if (!string.IsNullOrEmpty(Model.PosterUrl))
                    {
                        <div class="mb-2">
                            <img src="~/images/@Model.PosterUrl" alt="Poster" class="img-thumbnail" style="max-height: 250px;">
                        </div>
                    }
                    else
                    {
                        <p class="text-muted fst-italic">Chưa có ảnh poster</p>
                    }

                    <label class="form-label">Chọn ảnh mới (nếu muốn thay)</label>
                    <input type="file" name="PosterFile" class="form-control" accept="image/*" />
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Quay lại danh sách
                    </a>
                    <button type="submit" class="btn btn-warning text-white">
                        <i class="fas fa-save"></i> Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
