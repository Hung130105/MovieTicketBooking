@model MovieTicketBooking.Models.Movie

@{
    ViewData["Title"] = "Thêm Phim Mới";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-success text-white text-center">
            <h4 class="mb-0"><i class="fas fa-film"></i> THÊM PHIM MỚI</h4>
        </div>

        <div class="card-body">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Tên phim *</label>
                    <input asp-for="Title" class="form-control" placeholder="Nhập tên phim..." />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Mô tả phim *</label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Nhập nội dung mô tả phim..."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="ReleaseDate" class="form-label">Ngày khởi chiếu *</label>
                        <input asp-for="ReleaseDate" type="date" class="form-control" />
                        <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Price" class="form-label">Giá vé (VNĐ) *</label>
                        <input asp-for="Price" type="number" min="0" class="form-control" placeholder="Nhập giá vé..." />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Ảnh poster *</label>
                    <input type="file" name="PosterFile" class="form-control" accept="image/*" />
                    <small class="text-muted">Chỉ chọn file ảnh (jpg, png, jpeg...).</small>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Quay lại danh sách
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-plus-circle"></i> Thêm Phim
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
