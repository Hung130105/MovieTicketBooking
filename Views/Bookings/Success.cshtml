@model MovieTicketBooking.Models.Booking

@{
    ViewData["Title"] = "Đặt vé thành công";
}

<div class="container mt-5 text-center">
    <h2 class="text-success">🎉 Đặt vé thành công!</h2>
    <p class="mt-3">Cảm ơn bạn đã đặt vé xem phim tại <strong>MovieTicketBooking</strong>.</p>

    <div class="card mx-auto mt-4 shadow" style="max-width: 500px;">
        <div class="card-body text-start">
            <p><strong>Mã đặt vé:</strong> @Model.BookingCode</p>
            <p><strong>Họ tên:</strong> @Model.CustomerName</p>
            <p><strong>Email:</strong> @Model.CustomerEmail</p>
            <p><strong>Số điện thoại:</strong> @Model.CustomerPhone</p>
            <p><strong>Ngày đặt:</strong> @Model.BookingDate.ToString("dd/MM/yyyy HH:mm")</p>
            <p><strong>Trạng thái:</strong> <span class="text-success">@Model.Status</span></p>
            <p><strong>Thanh toán:</strong> <span class="text-warning">@Model.PaymentStatus</span></p>
            <p><strong>Phương thức:</strong> @Model.PaymentMethod</p>
            <p><strong>Tổng tiền:</strong> <span class="fw-bold text-primary">@Model.TotalAmount.ToString("N0") VNĐ</span></p>
        </div>
    </div>

    <!-- ✅ Nút về trang chủ chính xác -->
    <a asp-controller="Movies" asp-action="Index" class="btn btn-primary mt-4">
        <i class="fas fa-home"></i> Về trang chủ
    </a>

    <!-- ✅ Nút tải vé PDF -->
    <a asp-controller="Ticket" asp-action="Download" asp-route-id="@Model.Id" class="btn btn-outline-success mt-3">
        <i class="fa fa-download"></i> Tải vé PDF
    </a>
</div>