@model IEnumerable<MovieTicketBooking.Models.Booking>
@{
    ViewData["Title"] = "Lịch sử đặt vé";
}

<div class="container mt-4">
    <h2>Lịch sử đặt vé của bạn</h2>
    <hr />

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }

    @if (!Model.Any())
    {
        <p>Bạn chưa có vé nào.</p>
    }
    else
    {
        <table class="table table-bordered table-striped mt-3">
            <thead class="table-dark">
                <tr>
                    <th>Mã vé</th>
                    <th>Phim</th>
                    <th>Thời gian chiếu</th>
                    <th>Ngày đặt</th>
                    <th>Tổng tiền</th>
                    <th>Trạng thái</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.BookingCode</td>
                        <td>@item.Showtime.Movie.Title</td>
                        <td>@item.Showtime.StartTime.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@item.BookingDate.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@item.TotalAmount.ToString("N0") VNĐ</td>
                        <td>
                            @if (item.Status == "Đặt thành công")
                            {
                                <span class="text-success">@item.Status</span>
                            }
                            else if (item.Status == "Đã hủy")
                            {
                                <span class="text-danger">@item.Status</span>
                            }
                            else
                            {
                                @item.Status
                            }
                        </td>
                        <td>
                            <a class="btn btn-sm btn-primary" href="/Bookings/Success/@item.Id">
                                <i class="fa fa-info-circle"></i> Chi tiết
                            </a>

                            @if (item.Status == "Đặt thành công")
                            {
                                <form asp-action="Cancel" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit"
                                            class="btn btn-danger btn-sm"
                                            onclick="return confirm('Bạn có chắc chắn muốn hủy vé này không?');">
                                        <i class="fa fa-times"></i> Hủy
                                    </button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>